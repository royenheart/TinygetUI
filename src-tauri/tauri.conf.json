{
    "package": {
        "productName": "Tinyget UI",
        "version": "../package.json"
    },
    "build": {
        "beforeDevCommand": "pnpm start",
        "beforeBuildCommand": "pnpm build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "tauri": {
        "systemTray": {
            "iconPath": "icons/icon.ico",
            "iconAsTemplate": true
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "Tinyget.UI",
            "publisher": "RoyenHeart",
            "copyright": "Copyright Notice",
            "icon": ["icons/16x16.png", "icons/32x32.png", "icons/icon.ico"],
            "resources": [],
            "externalBin": [],
            "category": "DeveloperTool",
            "shortDescription": "",
            "longDescription": "",
            "deb": {
                "depends": []
            },
            "macOS": {
                "frameworks": [],
                "minimumSystemVersion": "",
                "exceptionDomain": "",
                "signingIdentity": null,
                "entitlements": null
            },
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "updater": {
            "active": false,
            "dialog": false,
            "endpoints": ["https://youtu.be/ZXjlZBisYPQ"],
            "pubkey": ""
        },
        "allowlist": {
            "all": false,
            "clipboard": {
                "all": false,
                "readText": false,
                "writeText": false
            },
            "dialog": {
                "all": false,
                "ask": false,
                "confirm": false,
                "message": true,
                "open": false,
                "save": false
            },
            "fs": {
                "all": false,
                "copyFile": false,
                "createDir": true,
                "exists": false,
                "readDir": true,
                "readFile": false,
                "removeDir": false,
                "removeFile": false,
                "renameFile": false,
                "scope": ["$APP/*", "$DOCUMENT/*", "$DOWNLOAD/*"],
                "writeFile": true
            },
            "globalShortcut": {
                "all": false
            },
            "http": {
                "all": false,
                "request": false,
                "scope": []
            },
            "notification": {
                "all": true
            },
            "os": {
                "all": true
            },
            "path": {
                "all": true
            },
            "process": {
                "all": false,
                "exit": false,
                "relaunch": true,
                "relaunchDangerousAllowSymlinkMacos": false
            },
            "protocol": {
                "all": false,
                "asset": false,
                "assetScope": []
            },
            "shell": {
                "all": false,
                "execute": false,
                "open": ".*",
                "scope": [],
                "sidecar": false
            },
            "window": {
                "all": false,
                "center": false,
                "close": true,
                "create": false,
                "hide": true,
                "maximize": true,
                "minimize": true,
                "print": false,
                "requestUserAttention": false,
                "setAlwaysOnTop": false,
                "setCursorGrab": false,
                "setCursorIcon": false,
                "setCursorPosition": false,
                "setCursorVisible": false,
                "setDecorations": true,
                "setFocus": true,
                "setFullscreen": true,
                "setIcon": false,
                "setMaxSize": false,
                "setMinSize": false,
                "setPosition": false,
                "setResizable": false,
                "setSize": true,
                "setSkipTaskbar": false,
                "setTitle": false,
                "show": false,
                "startDragging": true,
                "unmaximize": true,
                "unminimize": true
            }
        },
        "windows": [
            {
                "title": "Tinyget UI",
                "label": "main",
                "minWidth": 400,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false,
                "visible": false,
                "decorations": true,
                "alwaysOnTop": false
            }
        ],
        "security": {
            "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
        }
    }
}
